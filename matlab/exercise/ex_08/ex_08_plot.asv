run('ex_08_init.m')             % init the system
clf                             % clear previous plot

hold on;
Kp = -(y/x);
sim('ex_08_model');
plot(Revolutions.time, Revolutions.signals.values);

Kp = 10*(-(y/x));
sim('ex_08_model');
plot(Revolutions.time, Revolutions.signals.values);

Kp = 0.1*(-(y/x));
sim('ex_08_model');
plot(Revolutions.time, Revolutions.signals.values);

hold off

legend('Kp ideal', 'Kp > ideal', 'Kp < ideal');
